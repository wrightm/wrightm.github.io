{
  "name": "my-site",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "flow-bin": "^0.61.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest-enzyme": "^4.0.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.0.17",
    "react-test-renderer": "^16.2.0",
    "serve": "^6.4.1",
    "source-map-explorer": "^1.5.0"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.2.17",
    "@storybook/react": "^3.2.17"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!<rootDir>/path/to/dir/",
      "!src/index.js",
      "!src/registerServiceWorker.js",
      "!src/**/*.stories.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text"
    ]
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "flow": "flow",
    "precommit": "lint-staged",
    "predeploy": "npm run build",
    "deploy": "gh-pages -b master -d build",
    "start": "react-scripts start",
    "build": "flow && react-scripts build",
    "test": "react-scripts test --env=jsdom --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom",
    "eject": "react-scripts eject",
    "start:build": "react-scripts build && serve -s build",
    "format:all": "prettier --single-quote --write 'src/**/*.{js,jsx}'",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:export": "build-storybook -c .storybook -o .out"
  },
  "homepage": "https://wrightm.github.io"
}
